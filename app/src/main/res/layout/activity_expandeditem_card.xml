<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_expandablelistitem_card_content"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/activity_expandablelistitem_card_content_personID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:typeface="serif"/>

        <TextView
            android:id="@+id/activity_expandablelistitem_card_content_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:typeface="serif"/>

        <TextView
            android:id="@+id/activity_expandablelistitem_card_content_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:typeface="serif"/>

        <TextView
            android:id="@+id/activity_expandablelistitem_card_content_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:typeface="serif"/>

        <TextView
            android:id="@+id/activity_expandablelistitem_card_content_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:typeface="serif"/>

        <TextView
            android:id="@+id/activity_expandablelistitem_card_content_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:typeface="serif"/>

    </LinearLayout>

    <Button
        android:id="@+id/bid"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_marginRight="20dp"
        />


</RelativeLayout>